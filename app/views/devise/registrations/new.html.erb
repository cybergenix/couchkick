<div class="container">
  <div class="row">

    <div class="span12">

<section id="title" class="container">
    <div class="row">
      <div class="span12">
        <a class="heart-circle" href="portfolio.html"><i class="icon-heart"></i></a>
        <h5><span class="color-text">signup</span></h5>
      </div>
    </div>
  </section>



<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<div class="span3">

  	<%= f.input :first_name, :required => true, label: "first Name" %>
  	
</div>
<div class="span3">
<%= f.input :last_name, :required => true, label: "last Name" %>
</div>
<div class="span3">
    <%= f.input :email, :required => true, label: "email" %>
</div>

<div class="span2">
    <%= f.input :password, :required => true, label: "password" %>
</div>

<section id="title" class="container">
    <div class="row">
      <div class="span12">
       
        <%= f.button :submit, "Sign up", class: "btn large color " %>
      </div>
    </div>
  </section>







<% end %>
<div class="span12">
<%= render "devise/shared/links" %>
</div>
</div>

</div>

</div>