<div class="container">
  <div class="row">

    <div class="span12">

<section id="title" class="container">
    <div class="row">
      <div class="span12">
        <a class="heart-circle" href="portfolio.html"><i class="icon-heart"></i></a>
        <h5><span class="color-text">signup</span></h5>
      </div>
    </div>
  </section>



<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>


<div class="span3 offset3">
    <%= f.input :email, :required => false, label: "email" %>
</div>
<% if f.object.password_required? %>
<div class="span3">
    <%= f.input :password, :required => false, label: "password" %>
</div>
<% end %>

<section id="title" class="container">
    <div class="row">
      <div class="span12">
       
        <%= f.button :submit, "Sign up", class: "btn large color " %>
      </div>
    </div>
  </section>







<% end %>
<div class="span12">
<%= render "devise/shared/links" %>
</div>
</div>

</div>

</div>